- if show_last_push_widget?(event)
  .event_lp
    %div
      = image_tag gravatar_icon(event.author_email), :class => "avatar"
      %span You pushed to
      = event.ref_type
      = link_to gitlab_engine.project_commits_path(event.project, :ref => event.ref_name) do
        %strong= truncate(event.ref_name, :length => 20)
      at
      %strong= link_to event.project.name, event.project

      = link_to('Create Merge Request', new_mr_path_from_push_event(event), :title => "New Merge Request", :class => "btn very_small primary")
