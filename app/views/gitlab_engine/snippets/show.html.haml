= render "projects/project_head"

%h3
  = @snippet.title
  %small= @snippet.file_name
  - if can?(current_user, :admin_snippet, @project) || @snippet.author == current_user
    = link_to "Edit", edit_project_snippet_path(@project, @snippet), :class => "btn small right"

%br
.file_holder
  .file_title
    %i.icon-file
    %strong= @snippet.file_name
    %span.options
      = link_to "raw", gitlab_engine.raw_project_snippet_path(@project, @snippet), :class => "btn very_small", :target => "_blank"
  .file_content.code
    %div{:class => current_user.dark_scheme ? "black" : ""}
      = raw @snippet.colorize(options: { linenos: 'True'})

= render "notes/notes", :tid => @snippet.id, :tt => "snippet"
