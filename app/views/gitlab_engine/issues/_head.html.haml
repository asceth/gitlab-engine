%ul.nav.nav-tabs
  %li{:class => "#{'active' if current_page?(gitlab_engine.project_issues_path(@project))}"}
    = link_to gitlab_engine.project_issues_path(@project), :class => "tab" do
      Browse Issues
  %li{:class => "#{'active' if current_page?(gitlab_engine.project_milestones_path(@project))}"}
    = link_to gitlab_engine.project_milestones_path(@project), :class => "tab" do
      Milestones
  %li.right
    %span.rss-icon
      = link_to gitlab_engine.project_issues_path(@project, :atom, { :private_token => current_user.private_token }) do
        = image_tag asset_path("gitlab_engine/rss_ui.png"), :title => "feed"
