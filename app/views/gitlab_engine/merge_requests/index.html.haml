%h3.page_title
  Merge Requests
  - if can? current_user, :write_issue, @project
    = link_to gitlab_engine.new_project_merge_request_path(@project), :class => "right btn small", :title => "New Merge Request" do
      New Merge Request

%br


.ui-box
  .title
    %ul.nav.nav-pills
      %li{:class => ("active" if (params[:f] == "0" || !params[:f]))}
        = link_to gitlab_engine.project_merge_requests_path(@project, :f => 0) do
          Open
      %li{:class => ("active" if params[:f] == "2")}
        = link_to gitlab_engine.project_merge_requests_path(@project, :f => 2) do
          Closed
      %li{:class => ("active" if params[:f] == "3")}
        = link_to gitlab_engine.project_merge_requests_path(@project, :f => 3) do
          To Me
      %li{:class => ("active" if params[:f] == "1")}
        = link_to gitlab_engine.project_merge_requests_path(@project, :f => 1) do
          All

  %ul.unstyled
    = render @merge_requests
    - if @merge_requests.blank?
      %li
        %p.nothing_here_message Nothing to show here
    - if @merge_requests.present?
      %li.bottom
        .row
          .span7= paginate @merge_requests, :theme => "gitlab"
          .span4.right
            %span.cgray.right #{@merge_requests.total_count} merge requests for this filter
