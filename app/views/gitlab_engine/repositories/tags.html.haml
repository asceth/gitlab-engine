= render "gitlab_engine/commits/head"
- unless @tags.empty?
  %table.admin-table
    %thead
      %tr
        %th Name
        %th Last commit
        %th Updated at
        %th
    - @tags.each do |tag|
      - commit = Commit.new(tag.commit)
      %tr
        %td
          %strong= link_to tag.name, gitlab_engine.project_commits_path(@project, :ref => tag.name), :class => ""
        %td
          = link_to gitlab_engine.project_commit_path(@project, commit.id) do
            %code= commit.id.to_s[0..10]
          = image_tag gravatar_icon(commit.author_email), :class => "", :width => 16
          = truncate(commit.safe_message, :length => 40)
        %td
          %span.update-author.right
            = time_ago_in_words(commit.committed_date)
            ago
            &nbsp;
        %td
          - if can? current_user, :download_code, @project
            = link_to "Download", gitlab_engine.archive_project_repository_path(@project, :ref => tag.name), :class => "visible_link download_repo_link"

- else
  %h3 No tags
