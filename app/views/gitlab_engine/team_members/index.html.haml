= render "gitlab_engine/projects/project_head"
%h3.page_title
  Team Members
  %small (#{@project.users_projects.count})

- if can? current_user, :admin_team_member, @project
  .alert.alert-info
    = link_to gitlab_engine.new_project_team_member_path(@project), :class => "btn small right", :title => "New Team Member" do
      New Team Member
    Read more about project permissions
    %strong= link_to "here", gitlab_engine.help_permissions_path, :class => "vlink"


= render :partial => "gitlab_engine/team_members/team", :locals => {:project => @project}
