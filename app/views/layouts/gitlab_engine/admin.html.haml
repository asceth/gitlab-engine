!!! 5
%html{ :lang => "en"}
  = render "layouts/gitlab_engine/head"
  %body{:class => "#{app_theme} admin"}
    = render "layouts/gitlab_engine/flash"
    = render "layouts/gitlab_engine/head_panel", :title => "Admin area"
    .container
      %nav.main_menu
        = link_to "Stats", gitlab_engine.admin_root_path, :class => "home #{controller.controller_name == "dashboard" ? "current" : nil}"
        = link_to "Projects", gitlab_engine.admin_projects_path, :class => controller.controller_name == "projects" ? "current" : nil
        = link_to "Users", gitlab_engine.admin_users_path, :class => controller.controller_name == "users" ? "current" : nil
        = link_to "Emails", gitlab_engine.admin_emails_path, :class => controller.controller_name == "mailer" ? "current" : nil
        = link_to "Resque", "/info/resque"

      .content= yield
