!!! 5
%html{ :lang => "en"}
  = render "layouts/gitlab_engine/head"
  %body{:class => "#{app_theme} profile"}
    = render "layouts/gitlab_engine/flash"
    = render "layouts/gitlab_engine/head_panel", :title => "Profile"
    .container
      %ul.main_menu
        %li.home{:class => tab_class(:profile)}
          = link_to "Profile", gitlab_engine.profile_path

        %li{:class => tab_class(:password)}
          = link_to "Password", gitlab_engine.profile_password_path

        %li{:class => tab_class(:token)}
          = link_to "Token", gitlab_engine.profile_token_path

        %li{:class => tab_class(:design)}
          = link_to "Design", gitlab_engine.profile_design_path

        %li{:class => tab_class(:ssh_keys)}
          = link_to gitlab_engine.keys_path do
            SSH Keys
            %span.count= current_user.keys.count

      .content
        = yield
